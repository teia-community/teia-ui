{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es2017",
    "jsx": "react",
    "checkJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "NodeNext",
    "paths": {
      "@atoms/*": ["atoms/*"],
      "@components/*": ["components/*"],
      "@constants": ["constants"],
      "@context/*": ["context/*"],
      "@data/*": ["data/*"],
      "@hooks/*": ["hooks/*"],
      "@icons/*": ["icons/*"],
      "@style": ["./styles.module.scss"],
      "@styles/*": ["styles/*"],
      "@utils/*": ["utils/*"],
      "@types": ["types.d.ts"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "docs"]
}
